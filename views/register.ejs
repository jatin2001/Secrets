<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <%if(message){%>
            <p style="color: red;"><%=message%></p>
          <%}%>
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" minlength="8" required>
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
            <br><br>
            <a href="/login">Existing User? Log in</a>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
           <div class="col">
            <a href="/auth/facebook" class="fb btns">
              <i class="fa fa-facebook fa-fw"></i> Sign Up with Facebook
            </a>
            
            <a href="/auth/google" class="google btns">
              <i class="fa fa-google fa-fw"></i> Sign Up with Google+
            </a>
          </div>
        </div>
        <!--  -->
      </div>
    </div>
  
  </div>
</div>

<%- include('partials/footer') %>
